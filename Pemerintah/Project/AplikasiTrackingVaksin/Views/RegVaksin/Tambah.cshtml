@model AplikasiTrackingVaksin.ServiceReference1.Reg_Vaksin
@{
    Layout = "~/Views/Shared/Produsen.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <h4>Tambah Data Registrasi Vaksin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="">
                        @Html.Label("Kode Vaksin")
                        @Html.EditorFor(model => model.kode, new { htmlAttributes = new { @class = "form-control", @placeholder = "*isi dengan format VAKxxx (xxx -> 3 digit unique code)" } })
                        @Html.ValidationMessageFor(model => model.kode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="">
                        @Html.Label("Jenis Vaksin")
                        @Html.DropDownListFor(model => model.jenis, new[]
                           {
                               new SelectListItem(){Text = "Cairan", Value="Cairan"},
                               new SelectListItem(){Text = "Pil", Value="Pil"},
                               new SelectListItem(){Text = "Tablet", Value="Tablet"}
                           }, "-- Pilih Jenis Vaksin --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.jenis, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "RegVaksin")" class="btn btn-danger">Kembali</a>
                    <input type="submit" value="Buat" class="btn btn-primary" />
                </div>

                <div class="col-md-6">

                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
