@model AplikasiTrackingVaksin.ServiceReference1.Data_Penduduk

@{
    Layout = "~/Views/Shared/Pemerintah.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Data ( @Html.ValueFor(model => model.NIK) - @Html.ValueFor(model => model.nama))</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            @Html.HiddenFor(model => model.id)
            <div class="col-md-4">
                @Html.Label("NIK")
                @Html.EditorFor(model => model.NIK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NIK, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("Nama ")
                @Html.EditorFor(model => model.nama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nama, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("Kelurahan ")
                @Html.EditorFor(model => model.kelurahan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kelurahan, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Kecamatan ")
                @Html.EditorFor(model => model.kecamatan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kecamatan, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("Kota ")
                @Html.EditorFor(model => model.kota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kota, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("Kode Pos")
                @Html.EditorFor(model => model.kode_pos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kode_pos, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("Index", "Pemerintah")" class="btn btn-danger">Kembali</a>
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
