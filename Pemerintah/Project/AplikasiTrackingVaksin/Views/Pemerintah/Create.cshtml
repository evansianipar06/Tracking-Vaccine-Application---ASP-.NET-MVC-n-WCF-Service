@model AplikasiTrackingVaksin.ServiceReference1.Data_Penduduk
@{
    Layout = "~/Views/Shared/Pemerintah.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <h4>Tambah Data Penduduk</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-4">
                    <div class="">
                        @Html.Label("NIK")
                        @Html.EditorFor(model => model.NIK, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan NIK" } })
                        @Html.ValidationMessageFor(model => model.NIK, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="">
                        @Html.Label("Nama")
                        @Html.EditorFor(model => model.nama, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan Nama" } })
                        @Html.ValidationMessageFor(model => model.nama, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    @Html.Label("Kelurahan")
                    <div class="">
                        @Html.EditorFor(model => model.kelurahan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan Keluarahan" } })
                        @Html.ValidationMessageFor(model => model.kelurahan, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <div class="">
                        @Html.Label("Kode Pos")
                        @Html.EditorFor(model => model.kode_pos, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan Kode Pos" } })
                        @Html.ValidationMessageFor(model => model.kode_pos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="">
                        @Html.Label("Kota")
                        @Html.EditorFor(model => model.kota, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan Kota" } })
                        @Html.ValidationMessageFor(model => model.kota, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    @Html.Label("Kecamatan")
                    <div class="">
                        @Html.EditorFor(model => model.kecamatan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Masukkan Kecamatan" } })
                        @Html.ValidationMessageFor(model => model.kecamatan, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Pemerintah")" class="btn btn-danger">Kembali</a>
                    <input type="submit" value="Buat" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
